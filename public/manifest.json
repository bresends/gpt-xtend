{
    "manifest_version": 3,

    "name": "GPTXtend",
    "description": "Nothing yet",
    "version": "1.0",

    "action": {
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
            "matches": ["*://chat.openai.com/*", "*://*.chat.openai.com/*"],
            "js": ["js/content_script.js"],
            "css": ["style.css"]
        }
    ],

    "permissions": ["storage", "activeTab"],

    "host_permissions": ["https://chat.openai.com/*"]
}
