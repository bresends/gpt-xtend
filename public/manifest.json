{
    "manifest_version": 3,

    "name": "GPTXtend",
    "description": "Easily navigate through lengthy content and engage in meaningful conversations with AI. Enhance your productivity GPTXtend.",
    "version": "1.0",
    "author": "Bruno Resende",

    "action": {
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
            "matches": ["*://chat.openai.com/*", "*://*.chat.openai.com/*"],
            "js": ["js/content_script.js"],
            "css": ["style.css"]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "host_permissions": ["https://chat.openai.com/*"]
}
